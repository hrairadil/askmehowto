.question
  h1= @question.title
  p= @question.body
  p= render 'layouts/shared/votes', resource: @question
  = render 'layouts/shared/attachments_list', resource: @question
  /.comments
    = render 'comments/comments'
  /.create-comments
    = render 'comments/'
.answers data={ question_id: @question.id }
  = render 'answers/index'
.create-answer
  = render 'answers/form'

= subscribe_to "/questions/#{@question.id}/answers"
= subscribe_to "/questions/#{@question.id}/comments"
