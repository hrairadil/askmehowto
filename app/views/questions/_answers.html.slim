- @question.answers.each do |answer|
  - if answer.persisted?
    div id="answer-#{answer.id}"
      - if answer.best
        div id='best-answer'
      p= answer.body
      ul
        - answer.attachments.each do |a|
          li= link_to a.file.file.identifier, a.file.url

      - if @question.user == current_user and current_user.present?
        = link_to 'Best', set_the_best_question_answer_path(@question, answer.id), method: :patch, remote: true

      - if (answer.user == current_user) and current_user.present? and answer.persisted?
        p
          = link_to 'Delete answer', question_answer_path(@question, answer.id), method: :delete, remote: true
          = link_to 'Edit', '', class: 'edit-answer-link', data: { answer_id: answer.id }
          p
            = form_for [@question, answer], remote: true, html: { id: "edit-answer-#{answer.id}" } do |f|
              p
                = f.label :body, 'Answer'
                = f.text_area :body
              p
                = f.submit 'Save'
