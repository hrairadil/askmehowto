- if user_signed_in?
  = form_for [@question, @answer], remote: true, html: { id: 'create-answer-form' } do |f|
    p
      = f.label :body, 'Your answer'
      .answer-errors
      = f.text_area :body, id: 'create-answer-body'
    p
      = f.fields_for :attachments do |a|
        = a.label :file
        = a.file_field :file
    p= f.submit 'Create answer'
